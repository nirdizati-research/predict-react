{
  "env": {
    "browser": true
  },
  "plugins": [
    "react",
    "import",
    "jsx-a11y"
  ],
  "extends": [
    "react-app",
    "eslint:recommended",
    "plugin:react/recommended",
    "google",
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:jsx-a11y/recommended"
  ],
  "rules": {
    "max-len": [
      "error",
      120
    ],
    "arrow-parens": "off",
    "require-jsdoc": "off",
    "comma-dangle": "off",
    "no-invalid-this": "off",
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "ignore"
      }
    ]
  },
  "settings": {
    "react": {
      "version": "16.3"
    }
  }
}
